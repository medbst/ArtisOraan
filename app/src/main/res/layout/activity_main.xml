<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bleu">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativlay"
        android:layout_marginTop="110dp"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/signin"
        android:layout_height="wrap_content"

        android:text="Artis"

        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="35dp">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/signiin"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/signiiin"
        android:text="ran"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="35dp">

    </TextView>

    <TextView
        android:id="@+id/signiiin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_toRightOf="@id/signin"
        android:text="O"
        android:textColor="@color/orange"
        android:textSize="35dp"
        android:textStyle="bold">

    </TextView>
</RelativeLayout>

    <EditText
        android:id="@+id/userinscri"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/relativlay"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"

        android:layout_marginBottom="15dp"
        android:alpha="0.7"
        android:background="@drawable/roundedcorners"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"

        android:drawablePadding="20dp"
        android:fontFamily="@font/roboto_light"
        android:hint="Nom d'utilisateur"

        android:padding="20dp" />

    <EditText
        android:id="@+id/passwd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/userinscri"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:alpha="0.7"
        android:background="@drawable/roundedcorners"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/roboto_light"
        android:hint="Mot de passe"
        android:inputType="textPassword"

        android:padding="20dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/bconnecter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwd"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/roboto_medium"
        android:text="Se connecter"
        android:textColor="@color/black">

    </Button>
    <TextView
        android:textColor="#80FFFFFF"

        android:layout_width="wrap_content"
      android:id="@+id/textt"

        android:layout_height="wrap_content"
        android:layout_below="@id/bconnecter"
        android:layout_marginTop="80dp"
        android:text="Vous n'avez pas de compte ?"
        android:layout_marginLeft="74dp">


    </TextView>

    <TextView
        android:textColor="@color/orange"
        android:id="@+id/tvinscrire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bconnecter"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/textt"
        android:text="S'inscrire"

android:paddingLeft="5dp"
        android:layout_centerHorizontal="true">


    </TextView>



</RelativeLayout>



